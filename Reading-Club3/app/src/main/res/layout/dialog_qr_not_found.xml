<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/ralewaylight"
        android:text="Book not found, do you want to add this book?"
        android:textSize="17dp" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/okBtn"
        android:layout_alignBottom="@+id/okBtn"
        android:layout_toLeftOf="@+id/okBtn"
        android:layout_toStartOf="@+id/okBtn"
        android:background="@null"
        android:layout_marginRight="10dp"
        android:text="CANCEL"
        android:textColor="@color/red" />

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="10dp"
        android:textColor="@color/green"
        android:background="@null"
        android:text="OK" />

</RelativeLayout>